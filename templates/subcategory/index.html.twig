{% extends 'base.html.twig' %}

{% block title %}Subcategory index{% endblock %}

{% block body %}
<div class="container"><br><br>
    <h1 class="text-center mt-4 text-primary">Listes des sous cat√©gories </h1><br>

    <table class="table">
        <thead>
            <tr>
                <th class="text-primary">Id</th>
                <th class="text-primary">Name</th>
                <th class="text-primary">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for subcategory in subcategories %}
            <tr>
                <td>{{ subcategory.id }}</td>
                <td>{{ subcategory.name }}</td>
                <td>
                    <a href="{{ path('app_subcategory_show', {'id': subcategory.id}) }}">show</a>
                    <a href="{{ path('app_subcategory_edit', {'id': subcategory.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_subcategory_new') }}" class="btn btn-outline-primary">Create new</a>
</div>
{% endblock %}
