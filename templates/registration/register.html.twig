{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class=" container security-form">
		<div class="login-form">
			<h1 class="text-primary">Inscription</h1>

			{{ form_errors(registrationForm) }}

			{{ form_start(registrationForm) }}
			{{ form_widget(registrationForm.email, {'attr': {'class': 'form form-control'}}) }}
			<br>
			{{ form_widget(registrationForm.firstName, {'attr': {'class': 'form form-control'}}) }}
			<br>
			{{ form_widget(registrationForm.lastName, {'attr': {'class': 'form form-control'}}) }}
			<br>
			{{ form_widget(registrationForm.plainPassword,{'attr': {'class': 'form form-control'}})}}
			<br>
			{{ form_row(registrationForm.agreeTerms) }}
			<br>

			<button type="submit" class="btn btn-block btn-primary">Valider</button>
			{{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}
