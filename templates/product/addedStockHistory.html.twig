{% extends 'base.html.twig' %}

{% block title %}Historique Stock
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-primary text-center mt-4">Historique du stock Produit
		</h1><br><br>
		<table class="table">
			<thead>
				<tr>
					<th class="text-primary">Id</th>
					<th class="text-primary">Quantité ajoutée</th>
					<th class="text-primary">Date d'ajout</th>
					<th class="text-primary">Nom du produit</th>
				</tr>
			</thead>
			<tbody>
				{% for productAdded in productsAdded %}
					<tr>
						<td>{{ productAdded.id }}</td>
						<td>{{ productAdded.qte }}</td>
						<td>{{ productAdded.createdAt|date('Y-m-d H:i:s') }}</td>
						<td>{{ productAdded.product.name }}</td>
					</tr>
				{% endfor %}
			</tbody>


		</table>
		<a href="{{path('app_product_index')}}" class="btn btn-outline-primary">Retour à la liste</a>

	</div>


{% endblock %}
